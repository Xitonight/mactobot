generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id                   BigInt  @id @unique
  welcomeEnabled       Boolean @default(true)
  welcomeMessageText   String?
  welcomeMessageMedia  String?
  deleteDefaultWelcome Boolean @default(false)
  goodbyeEnabled       Boolean @default(true)
  goodbyeMessageText   String?
  goodbyeMessageMedia  String?
  deleteDefaultGoodbye Boolean @default(false)
  language             String  @default("en")

  users UserInChat[]
}

model User {
  id       BigInt  @id @unique
  username String?

  chats UserInChat[]
}

model UserInChat {
  userId  BigInt
  chatId  BigInt
  isAdmin Boolean @default(false)

  user User @relation(fields: [userId], references: [id])
  chat Chat @relation(fields: [chatId], references: [id])

  @@id([userId, chatId])
}
